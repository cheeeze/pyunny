<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ssafy.d102.pyunny.activity.LoginActivity"
    android:weightSum="9"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:weightSum="4"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>
        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:src="@drawable/login_logo"
            android:scaleType="centerInside"
            android:background="#00000000"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:weightSum="7"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"/>
        <ImageButton
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/kakaotalk"
            android:scaleType="centerInside"
            android:background="#00000000"
            android:id="@+id/img_btn_login_kakao"
            android:layout_margin="3dp"/>
        <ImageButton
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/google"
            android:scaleType="centerInside"
            android:background="#00000000"
            android:layout_margin="3dp"
            android:id="@+id/img_btn_login_google"/>
        <ImageButton
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_margin="3dp"
            android:src="@drawable/naver"
            android:scaleType="centerInside"
            android:background="#00000000"
            android:id="@+id/img_btn_login_naver"/>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:text="or use your account"
        android:gravity="center"
        android:textSize="20dp"/>
    <EditText
        android:layout_width="200dp"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:hint="email"
        android:textColor="#000000"
        android:id="@+id/edt_login_email"
        android:inputType="textEmailAddress"
        android:layout_gravity="center"/>
    <EditText
        android:layout_width="200dp"
        android:layout_height="0dp"
        android:hint="password"
        android:layout_weight="1"
        android:textColor="#000000"
        android:inputType="textPassword"
        android:id="@+id/edt_login_password"
        android:layout_gravity="center"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:weightSum="2">

        <ImageButton
            android:id="@+id/btn_login"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="50dp"
            android:layout_weight="1"
            android:background="#00000000"
            android:scaleType="fitXY"
            android:padding="5dp"
            android:src="@drawable/btn_login" />

        <ImageButton
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/btn_signup"
            android:scaleType="fitXY"
            android:background="#00000000"
            android:layout_marginRight="50dp"
            android:padding="5dp"
            android:id="@+id/btn_signup" />

    </LinearLayout>

    <TextView
        android:id="@+id/txt_login_forget_password"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:text="Forget your password?" />


</LinearLayout>